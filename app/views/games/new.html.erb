<h1>New Game</h1>

<div class="display">
  <% @letters.chars.each do |letter| %>
  <span class="square-letter"> <%=letter.upcase %> </span>
  <%end%>
</div>


<div class="form">
  <div class="question">
    What is the longest word you can find?
  </div>
  <form action="/games/score" method="POST">
  <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
    <input type="text" name="answer">
    <input type="hidden" name="letters" value="<%= @letters%>">
    <div class="button">
      <input type="submit" value="Play!">
    </div>
  </form>
</div>
